# top-most EditorConfig file
root = true

###############################################
# GLOBAL DEFAULTS
###############################################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 88

###############################################
# PYTHON
###############################################
[*.py]
indent_size = 4
indent_style = space
charset = utf-8
# Recommended for Black compatibility
max_line_length = 88

###############################################
# SHELL / POWERSHELL
###############################################
[*.ps1]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

###############################################
# JSON / YAML / TOML
###############################################
[*.json]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[pyproject.toml]
indent_size = 2

###############################################
# MARKDOWN
###############################################
[*.md]
trim_trailing_whitespace = false  # allow spaces for wrapped lines
indent_size = 2

###############################################
# HTML / CSS / JS (UI WORK)
###############################################
[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2
