# ApeX Omni credentials (TESTNET by default)
APEX_API_KEY=your_api_key_here
APEX_API_SECRET=your_api_secret_here
APEX_PASSPHRASE=your_passphrase_here

# Zero-knowledge / L2 keys
APEX_ZK_SEED=your_omni_seed_here
APEX_ZK_L2KEY=your_l2_key_here

# Network: "testnet" or "mainnet"
APEX_NETWORK=testnet
APEX_HTTP_ENDPOINT=
APEX_ENABLE_WS=false
APEX_REST_TIMEOUT_SECONDS=10
APEX_REST_RETRIES=2
APEX_REST_RETRY_BACKOFF_SECONDS=0.5
APEX_REST_RETRY_BACKOFF_MAX_SECONDS=4.0
APEX_REST_RETRY_JITTER_SECONDS=0.2
APEX_POSITIONS_EMPTY_STALE_SECONDS=12
APEX_ORDERS_EMPTY_STALE_SECONDS=12

# App settings
APP_ENV=development
APP_HOST=127.0.0.1
APP_PORT=8000
LOG_LEVEL=INFO

# Risk caps (optional percentages)
PER_TRADE_RISK_CAP_PCT=
DAILY_LOSS_CAP_PCT=
OPEN_RISK_CAP_PCT=

# Risk engine buffers
SLIPPAGE_FACTOR=0.0
FEE_BUFFER_PCT=0.0

# ATR stop-loss defaults
TIMEFRAME=5m
ATR_PERIOD=14
ATR_MULTIPLIER=1.5
